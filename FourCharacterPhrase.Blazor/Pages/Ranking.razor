@page "/ranking"
@inherits RankingBase

<h1>順位</h1>

@if (AnswerNumberEntitys == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <button class="btn btn-danger" @onclick="() => ResetDataAsync()">データリセット</button>
    <br />
    <br />

    <table class="table">
        <thead>
            <tr>
                <th>名前</th>
                <th>回答数</th>
                <th>時間</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var answerNumberEntity in AnswerNumberEntitys)
            {
                <tr>
                    <td>@answerNumberEntity.Name</td>
                    <td>@answerNumberEntity.Count</td>
                    <td>@answerNumberEntity.ElapsedTime 秒</td>
                </tr>
            }
        </tbody>
    </table>
}
